# TTS配置
TTS_MODEL_NAME=tts_models/en/ljspeech/tacotron2-DDC

# SVC配置
SVC_MODEL_PATH=/path/to/your/model.pth
SVC_CONFIG_PATH=/path/to/your/config.json
SVC_DEVICE=cuda:0  # 使用CPU则设置为cpu
SVC_SPEAKER_ID=0
SVC_NOISE_SCALE=0.4
SVC_F0_METHOD=dio

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Flask配置
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# 日志配置
LOG_LEVEL=INFO

# 存储配置
MAX_STORAGE_DAYS=7

# CUDA配置
CUDA_VISIBLE_DEVICES=0  # 指定GPU，多个GPU用逗号分隔